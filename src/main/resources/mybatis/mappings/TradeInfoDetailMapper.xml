<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.liuhu.socket.dao.TradeDetailInfoMapper">
    <resultMap id="BaseResultMap" type="com.liuhu.socket.entity.TradeInfoDetail">
        <result column="id" property="id" jdbcType="BIGINT"/>
        <result column="share_code" property="shareCode" jdbcType="VARCHAR"/>
        <result column="share_name" property="shareName" jdbcType="VARCHAR"/>
        <result column="b_date" property="buyDate" />
        <result column="s_date" property="saleDate" />
        <result column="b_price" property="buyPrice" jdbcType="DOUBLE"/>
        <result column="pre_s_price" property="preSPrice" jdbcType="DOUBLE"/>
        <result column="real_s_price" property="realSPrice" jdbcType="DOUBLE"/>
        <result column="b_count" property="buyCount" jdbcType="INTEGER"/>
        <result column="is_able" property="isAble" jdbcType="VARCHAR"/>
    </resultMap>

    <insert id="insertSelective" parameterType="com.liuhu.socket.entity.TradeInfoDetail">
        insert into trade_detail_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="shareCode != null">
                share_code,
            </if>
            <if test="shareName != null">
                share_name,
            </if>
            <if test="buyDate != null">
                b_date,
            </if>
            <if test="buyPrice != null">
                b_price,
            </if>
            <if test="saleDate != null">
                s_date,
            </if>
            <if test="preSPrice != null">
                pre_s_price,
            </if>
            <if test="realSPrice != null">
                real_s_price,
            </if>
            <if test="isAble != null">
                is_able,
            </if>
            <if test="buyCount != null">
                b_count,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="shareCode != null">
                #{shareCode,jdbcType=VARCHAR},
            </if>
            <if test="shareName != null">
                #{shareName,jdbcType=VARCHAR},
            </if>
            <if test="buyDate != null">
                #{buyDate},
            </if>
            <if test="buyPrice != null">
                #{buyPrice},
            </if>
            <if test="saleDate != null">
                #{saleDate},
            </if>
            <if test="preSPrice != null">
                #{preSPrice},
            </if>
            <if test="realSPrice != null">
                #{realSPrice},
            </if>
            <if test="isAble != null">
                #{isAble},
            </if>
            <if test="buyCount != null">
                #{buyCount},
            </if>
        </trim>
    </insert>

    <select id="queryDetailInfoByCondition" resultType="com.liuhu.socket.entity.TradeInfoDetail">
        select * from trade_detail_info where 1=1
        <if test="condition.isAble!=null">
            and is_able = #{condition.isAble}
        </if>
        <if test="condition.shareCode!=null">
            and share_code = #{condition.shareCode}
        </if>
    </select>

</mapper>